<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
        android:orientation="horizontal"
    android:baselineAligned="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="80">

        <fragment
            android:name="ca.farrelltonsolar.classic.ListPage"
            android:id="@+id/Power"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:inputType="none"
            tools:layout="@layout/reading_layout"
            app:register="Power"
            app:reading_title="@string/PowerTitle"
            app:reading_unit="@string/power_unit" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#CBA"
            android:layout_weight="20"
            android:orientation="vertical"
            android:weightSum="60">

            <fragment
                android:name="ca.farrelltonsolar.classic.ListPage"
                android:id="@+id/BatteryVolts"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="30"
                android:inputType="none"
                tools:layout="@layout/reading_layout"
                app:register="BatVoltage"
                app:reading_title="@string/BatVoltsTitle"
                app:reading_unit="@string/volt_unit" />

            <fragment
                android:name="ca.farrelltonsolar.classic.ListPage"
                android:id="@+id/BatteryCurrent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="30"
                android:inputType="none"
                tools:layout="@layout/reading_layout"
                app:register="BatCurrent"
                app:reading_title="@string/BatCurrentTitle"
                app:reading_unit="@string/amp_unit" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#CBC"
            android:layout_weight="20"
            android:orientation="vertical"
            android:weightSum="60">

            <fragment
                android:name="ca.farrelltonsolar.classic.ListPage"
                android:id="@+id/PVVoltage"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="none"
                tools:layout="@layout/reading_layout"
                app:register="PVVoltage"
                app:reading_title="@string/PVVoltTitle"
                app:reading_unit="@string/volt_unit"
                android:layout_weight="30" />

            <fragment
                android:name="ca.farrelltonsolar.classic.ListPage"
                android:id="@+id/PVCurrent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="30"
                android:inputType="none"
                tools:layout="@layout/reading_layout"
                app:register="PVCurrent"
                app:reading_title="@string/PVCurrentTitle"
                app:reading_unit="@string/amp_unit" />
        </LinearLayout>

        <fragment
            android:name="ca.farrelltonsolar.classic.ListPage"
            android:id="@+id/EnergyToday"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:inputType="none"
            tools:layout="@layout/reading_layout"
            app:register="EnergyToday"
            app:reading_title="@string/EnergyTodayTitle"
            app:reading_unit="@string/energy_unit" />

        <fragment
            android:name="ca.farrelltonsolar.classic.ListPage"
            android:id="@+id/TotalEnergy"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:inputType="none"
            tools:layout="@layout/reading_layout"
            app:register="TotalEnergy"
            app:reading_title="@string/TotalEnergyTitle"
            app:reading_unit="@string/energy_unit" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="27">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ChargeStateTitle"
                android:textSize="@dimen/textSizeXLarge"
                android:singleLine="true"
                android:inputType="none"
                android:textStyle="bold" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ChargeState"
                android:textSize="@dimen/textSizeMedium"
                android:singleLine="true"
                android:inputType="none" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>

