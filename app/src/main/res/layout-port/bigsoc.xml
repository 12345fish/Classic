<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_height="fill_parent"
    android:layout_margin="10dp"
    android:weightSum="60">
    <ca.farrelltonsolar.classic.SOCWheel
        android:id="@+id/SOC"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ProgressWheel:text="95%"
        ProgressWheel:textColor="#222222"
        ProgressWheel:textSize="80sp"
        ProgressWheel:rimColor="#44000000"
        ProgressWheel:barLength="60dp"
        ProgressWheel:barColor="#339BB9"
        ProgressWheel:barWidth="15dp"
        ProgressWheel:rimWidth="25dp"
        android:clickable="false"
        android:longClickable="true"
        android:layout_weight="30"
        android:layout_gravity="center" />

    <ca.farrelltonsolar.classic.GaugeView
        android:id="@+id/BatCurrent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:scaleStartValue="0"
        app:scaleEndValue="2000"
        app:showRanges="true"
        app:showScale="false"
        app:showReading="true"
        app:readingTitle="@string/BatCurrentTitle"
        app:showOuterShadow="false"
        app:showOuterBorder="true"
        app:showOuterRim="true"
        app:showInnerRim="true"
        app:textPrecision="0"
        app:textReadingSize="0.1"
        app:textTitleSize="0.05"
        android:layout_marginTop="10dp"
        app:textUnit="A"
        app:register="BatCurrent"
        android:layout_weight="30"
        android:layout_gravity="center" />
</LinearLayout>