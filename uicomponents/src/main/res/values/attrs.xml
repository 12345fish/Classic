<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Gauge">
        <attr name="showOuterShadow" format="boolean" />

        <attr name="showRim" format="boolean" />
        <attr name="showInnerRim" format="boolean" />
        <attr name="showLeds" format="boolean" />
        <attr name="biDirectional" format="boolean" />
        <attr name="autoScale" format="boolean" />

        <attr name="showScale" format="boolean" />
        <attr name="scaleStartValue" format="integer" />
        <attr name="scaleEndValue" format="integer" />
        <attr name="scaleStartAngle" format="integer" />
        <attr name="scaleEndAngle" format="integer" />
        <attr name="majorTickPercentOfMax" format="integer" />
        <attr name="minorTicksPerDivision" format="integer" />

        <attr name="showReading" format="boolean" />
        <attr name="readingUnit" format="string|reference" />
        <attr name="readingPrecision" format="integer" />
        <attr name="gaugeTitle" format="string" />


        <attr name="titleColor" format="color" />
        <attr name="readingColor" format="color" />
        <attr name="tickLabelColor" format="color" />

        <attr name="rangeValues" format="reference" />
        <attr name="rangeColors" format="reference" />

        <attr name="orientation" format="integer" />

    </declare-styleable>


</resources>